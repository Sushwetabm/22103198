{
    "name": "average-calculator",
    "version": "1.0.0",
    "description": "A TypeScript-based REST API microservice that calculates the average of numbers fetched from an external server while maintaining a sliding window.",
    "main": "dist/server.js",
    "scripts": {
      "start": "ts-node src/server.ts",
      "dev": "nodemon src/server.ts",
      "register": "ts-node src/register.ts",
      "build": "tsc",
      "serve": "node dist/server.js"
    },
    "dependencies": {
      "axios": "^1.6.0",
      "dotenv": "^10.0.0",
      "express": "^4.17.1"
    },
    "devDependencies": {
      "@types/express": "^4.17.13",
      "@types/node": "^16.11.6",
      "nodemon": "^2.0.15",
      "ts-node": "^10.4.0",
      "typescript": "^4.4.4"
    },
    "engines": {
      "node": ">=14"
    },
    "keywords": [
      "typescript",
      "express",
      "microservice",
      "api",
      "average-calculator"
    ],
